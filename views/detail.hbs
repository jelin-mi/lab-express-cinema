<a href="/movies/">Go back</a>
<div class="movie">
    {{#each peli }}
        <img src="{{ image }}">
        <h3>{{ title }}</h3>
        <p>{{ director }}</p>
        {{#each stars }}
            <ul>
                <li>{{ this }}</li>
            </ul>
        {{/each}}
        <p>{{ description }}</p>
        <p>{{ showtimes }}</p>
    {{/each}}
</div>